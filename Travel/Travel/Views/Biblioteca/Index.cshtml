@model IEnumerable<Travel.Models.Detail>

@{
    ViewData["Title"] = "Books";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Detalle de Libros</h2>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Libro
                </th>
                <th>
                    Sinopsis
                </th>
                <th>
                    # Paginas
                </th>
                <th>
                    ISBN
                </th>
                <th>
                    Editorial
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var detalle in Model)
            {
                <tr>
                    <td width="30%">@detalle.Nombre</td>
                    <td width="30%">@detalle.Apellidos</td>
                    <td width="30%">@detalle.Titulo</td>
                    <td width="100%">@detalle.Sinopsis</td>
                    <td width="30%">@detalle.N_paginas</td>
                    <td width="30%">@detalle.Isbn</td>
                    <td width="30%">@detalle.Editorial</td>
                </tr>
            }
        </tbody>
    </table>
</div>